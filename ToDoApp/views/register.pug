extends layout.pug

block content
    div.container
        div.row
            div.col-md-12.min-vh-100.d-flex.flex-column.justify-content-center
                div.row
                    div.col-lg-6.col-md-8.mx-auto
                        div.card.rounded.shadow.shadow-sm
                            div.card-header
                                h3.mb-0 Register
                            div.card-body
                                div.form-group
                                    label(for="username") Username
                                    input(type="text" class="form-control" id="username" name="username" placeholder="Enter username" required="required")
                                div.form-group
                                    label(for="pwd") Password
                                    input(type="password" class="form-control" id="password" name="password" placeholder="Enter password" required="required")
                                div.form-group
                                    label(for="confirmpwd") Password
                                    input(type="password" class="form-control" id="confirmpassword" placeholder="Enter password again" required="required")
                                div
                                if error
                                    div.alert.alert-danger #{error}
                                button.btn.btn-success.float-right(onclick='register()') Register
                                a.btn.btn-info(href='login' role='button') Already registered?
